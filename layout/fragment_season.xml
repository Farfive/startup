<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/season_loading_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" /> // Initially hidden or visible

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/season_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"> // Initially visible or hidden

        <!-- Your Season UI elements go here -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout> 